#. Tag: para
#: qemu_running_vms_qemukvm.xml:1510
#, no-c-format
msgid ""
"Use the following example script to connect &vmguest; to the newly created "
"bridge interface <literal>br0</literal> . Several commands in the script are "
"run via the <command>sudo</command> mechanism because they require "
"&rootuser; privileges."
msgstr ""

#. Tag: title
#: qemu_running_vms_qemukvm.xml:1517
#, no-c-format
msgid "Required Software"
msgstr ""

#. Tag: para
#: qemu_running_vms_qemukvm.xml:1518
#, no-c-format
msgid ""
"To manage a network bridge, you need to have the <package>tunctl</package> "
"package installed."
msgstr ""

#. Tag: screen
#: qemu_running_vms_qemukvm.xml:1523
#, no-c-format
msgid ""
"\n"
"#!/bin/bash\n"
"bridge=br0<co xml:id=\"co.qemu.net.bridge.br\"/>\n"
"tap=$(sudo tunctl -u $(whoami) -b)<co xml:id=\"co.qemu.net.bridge.tap\"/>\n"
"sudo ip link set $tap up<co xml:id=\"co.qemu.net.bridge.up\"/>\n"
"sleep 1s<co xml:id=\"co.qemu.net.bridge.sleep\"/>\n"
"sudo ip link add name $bridge type bridge\n"
"sudo ip link set $bridge up\n"
"sudo ip link set $tap master $bridge<co xml:id=\"co.qemu.net.bridge.br3\"/>\n"
"qemu-system-x86_64 -machine accel=kvm -m 512 -hda /images/sles_base.raw \\\n"
" -netdev tap,id=hostnet0 \\\n"
" -device virtio-net-pci,netdev=hostnet0,vlan=0,macaddr=&wsIVmac;,\\\n"
" ifname=$tap<co xml:id=\"co.qemu.net.bridge.ifname\"/>,script=no<co xml:id="
"\"co.qemu.net.bridge.script\"/>,downscript=no\n"
"sudo ip link set $tap nomaster<co xml:id=\"co.qemu.net.bridge.delif\"/>\n"
"sudo ip link set $tap down<co xml:id=\"co.qemu.net.bridge.linkdown\"/>\n"
"sudo tunctl -d $tap<co xml:id=\"co.qemu.net.bridge.deltap\"/>"
msgstr ""

