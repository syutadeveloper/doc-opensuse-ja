msgstr ""

#. Tag: #text
#: lxc.xml:291
#, no-c-format
msgid "='10.0.0.10' prefix='24' peer='192.168.122.5'/&gt; &lt;route"
msgstr ""

#. Tag: #text
#: lxc.xml:293
#, no-c-format
msgid ""
"family='ipv4' address='192.168.42.0' prefix='24' gateway='192.168.123.4'/"
