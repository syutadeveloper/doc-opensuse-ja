#: adm_sudo.xml:292
#, no-c-format
msgid "Useful Flags and Options"
msgstr ""

#. Tag: para
#: adm_sudo.xml:297
#, no-c-format
msgid "Option name"
msgstr ""

#. Tag: para
#: adm_sudo.xml:302
#, no-c-format
msgid "Description"
msgstr ""

