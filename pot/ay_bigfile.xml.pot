msgstr ""

#. Tag: screen
#: ay_bigfile.xml:11137
#, no-c-format
msgid "&lt;file&gt;/tmp/answer_hostname&lt;/file&gt;"
msgstr ""

#. Tag: para
#: ay_bigfile.xml:11140
#, no-c-format
msgid "This information is optional, but you should at least provide <literal>path</literal> or <literal>file</literal> ."
