      "]]&gt;\n"
      "        &lt;/source&gt;\n"
      "      &lt;/script&gt;\n"
      "    &lt;/postpartitioning-scripts&gt;\n"
      "  &lt;/scripts&gt;\n"
      "&lt;/profile&gt;"
